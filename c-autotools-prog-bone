#!/bin/bash
#
# Generates C Program Project Skeletons Simply and Properly
# Justine Tunney <jtunney@lobstertech.com>
# Licensed MIT
#

function ask {
    dest=$1
    descrip=$2
    default=$3
    [[ ! $default ]] && default=$4
    [[ ! $default ]] && default=$5
    echo -n "$descrip "
    [[ $default ]] && echo -n "[$default] "
    read $dest
    [[ ! $(eval echo $dest) ]] && eval $dest="$default"
}

[[ $DEST ]]      || DEST="."
[[ $PROJ ]]      || PROJ="$1"
[[ $PROJ ]]      || ask PROJ "project name?"
[[ $PROJ ]]      || exit 1
if [[ -e $PROJ ]]; then echo "$PROJ already exists!" >&2; exit 1; fi
[[ $DESCRIP ]]   || ask DESCRIP "description?" "$PROJ"
[[ $LIBS ]]      || ask LIBS "libraries? (space delimited)"
for s in $LIBS; do pkg-config $s || exit $?; done
[[ $OBJS ]]      || ask OBJS "objects? (space delimited)"
[[ $EMAIL ]]     || ask EMAIL "author email?" "$(git config user.email)" "$USER@$(hostname -f)"
[[ $AUTHOR ]]    || ask AUTHOR "author name?" "$(git config user.name)" "$USER"
[[ $LICENSE ]]   || ask LICENSE "license?" "GNU AGPL v3 or later"

PROJ_SYMBOL=$(echo $PROJ | tr a-z A-Z | tr - _)

mkdir $PROJ
cd $PROJ

mkdir -p doc
mkdir -p src/test

echo "generating .gitignore..."
cat >.gitignore <<EOF
# stuff for this project
./$PROJ

# typical c project stuff
*.~
*.o
*.a
*.lo
*.la
*.pyc
doc
core
vgcore.*
callgrind.out
TAGS
.libs
.gdb_history

# libtoolize/aclocal should make these for us
m4/pkg.m4
m4/libtool.m4
m4/ltoptions.m4
m4/ltsugar.m4
m4/ltversion.m4
m4/lt~obsolete.m4

# trash autotools leaves laying around
.deps
config
libtool
stamp-h1
Makefile
config.h
configure
aclocal.m4
config.log
Makefile.in
config.h.in
config.h.in~
config.cache
config.status
autom4te.cache
EOF

echo "generating README.rst..."
cat >README.rst <<EOF
.. -*-rst-*-

=$(echo $PROJ | sed s/./=/g)=
 $PROJ
=$(echo $PROJ | sed s/./=/g)=

:name:        $PROJ
:description: $DESCRIP
:copyright:   © $(date +%Y) $AUTHOR
:license:     $LICENSE


Setup
=====

How to install::

    ./configure
    make
    sudo make install

How to run::

    $PROJ


Developers
----------

Stuff you should install::

    sudo apt-get install build-essential libtool autoconf automake pkg-config
    sudo apt-get install gdb valgrind strace ltrace tshark

How to build::

    ./autogen.sh
    ./configure -C CFLAGS="-g3 -O0 -Wall -pedantic"
    make

How to test::

    make check
    ./leak ./test
EOF

######################################################################

echo "generating Makefile.am..."
cat >Makefile.am <<EOF
NAME = $PROJ
AUTOMAKE_OPTS = foreign
ACLOCAL_AMFLAGS = -I m4
EXTRA_DIST = autogen.sh

bin_PROGRAMS = $PROJ

${PROJ}_SOURCES = src/$PROJ.c src/${PROJ}_private.h src/log.c src/log.h src/bstrlib.c src/bstrlib.h$(for s in $OBJS; do echo -n " src/$s.c src/$s.h"; done)
${PROJ}_CFLAGS  = -Isrc -I@includedir@$(for s in $LIBS; do echo -n " \$($(echo $s | tr a-z A-Z | tr - _)_CFLAGS)"; done)
${PROJ}_LDADD   =$(for s in $LIBS; do echo -n " \$($(echo $s | tr a-z A-Z | tr - _)_LIBS)"; done)
${PROJ}_LIBS    =

check_PROGRAMS = test
TESTS = \$(check_PROGRAMS)

test_SOURCES = src/test/test.c
test_CFLAGS  = -Isrc -I@includedir@$(for s in $LIBS; do echo -n " \$($(echo $s | tr a-z A-Z | tr - _)_CFLAGS)"; done)
test_LDADD   =$(for s in $LIBS; do echo -n " \$($(echo $s | tr a-z A-Z | tr - _)_LIBS)"; done)
test_LIBS    =

maintainer-clean-local:
	rm -rf config
	rm -f aclocal.m4 config.h* configure Makefile.in \\
	      m4/pkg.m4 m4/libtool.m4 m4/ltoptions.m4 m4/ltsugar.m4 \\
	      m4/ltversion.m4 m4/lt~obsolete.m4
	find . -type f -name \*.pyc   \\
	       -or -name \*~          \\
	       -or -name -name \.*~   \\
	       -or -name \#\*         \\
	       -or -name \.\#\*       \\
	       -or -name core\*       \\
	       -or -name vgcore\*     \\
	    | xargs rm -f
EOF

######################################################################

echo "generating configure.ac..."
cat >configure.ac <<EOF
# -*- Autoconf -*-

AC_PREREQ(2.61)
AC_INIT([$PROJ], [0.1], [$EMAIL])

AC_CONFIG_AUX_DIR(config)
AC_CONFIG_MACRO_DIR(m4)
AM_INIT_AUTOMAKE([1.11.1 foreign -Wall])
AC_CONFIG_SRCDIR([src/$PROJ.c])
AM_CONFIG_HEADER([config.h])
AC_CANONICAL_BUILD
AC_CANONICAL_HOST

AC_PROG_CC_C99
AC_C_INLINE
AC_C_FLEXIBLE_ARRAY_MEMBER
AM_PROG_CC_C_O
PKG_PROG_PKG_CONFIG([0.22])

AC_CHECK_LIB([m], [cos], [], [AC_MSG_ERROR([no math library?!])])
LIBS="\$LIBS -lm"

AC_CHECK_LIB([rt], [clock_gettime])
if test x\$HAVE_LIBRT = xyes; then
   LIBS="\$LIBS -lrt"
fi

EOF

for pname in $LIBS; do
    vname=$(echo $pname | tr a-z A-Z | tr - _)
    cat >>configure.ac <<EOF
PKG_CHECK_MODULES($vname, $pname)
AC_SUBST(${vname}_LIBS)
AC_SUBST(${vname}_CFLAGS)
AC_SUBST(${vname}_VERSION)

EOF
done

cat >>configure.ac <<EOF
AC_SUBST(libdir)
AC_SUBST(bindir)
AC_SUBST(includedir)
AC_CONFIG_FILES([Makefile])
AC_OUTPUT
EOF

######################################################################

echo "generating autogen.sh..."
cat >autogen.sh <<EOF
#!/bin/sh
set -x
rm -rf aclocal.m4 config.cache autom4te*.cache config.h.in
libtoolize --copy --force --automake || exit \$?
aclocal -I m4 --install --force || exit \$?
autoheader -f || exit \$?
automake --copy --gnu --add-missing || exit \$?
autoconf || exit \$?
EOF
chmod +x autogen.sh

######################################################################

echo "generating leak..."
cat >leak <<EOF
#!/bin/sh
exec valgrind --tool=memcheck --leak-check=yes --leak-resolution=high --show-reachable=yes --track-origins=yes --num-callers=20 --track-fds=yes \$@
EOF
chmod +x leak

######################################################################

echo "generating src/${PROJ}_private.h..."
cat >src/${PROJ}_private.h <<EOF
/*
 * $PROJ -- $DESCRIP
 * Copyright (c) $(date +%Y) $AUTHOR
 * Licensed $LICENSE
 */

#ifdef HAVE_CONFIG_H
#include <config.h>
#endif

#include <stdio.h>
#include <stdlib.h>
#include <stdarg.h>
#include <stdint.h>
#include <stddef.h>
#include <stdbool.h>
#include <time.h>
#include <errno.h>
#include <string.h>
#include <assert.h>

#include <sys/resource.h>
#include <sys/select.h>
#include <sys/socket.h>
#include <sys/prctl.h>
#include <sys/types.h>
#include <arpa/inet.h>
#include <sys/ioctl.h>
#include <sys/wait.h>
#include <sys/time.h>
#include <sys/stat.h>
#include <termios.h>
#include <unistd.h>
#include <signal.h>
#include <dirent.h>
#include <fcntl.h>
#include <regex.h>
#include <netdb.h>
#include <sched.h>

#include "bstrlib.h"
#include "log.h"

EOF

for s in $LIBS; do
    if [[ -f /usr/include/$s.h || -f /usr/local/include/$s.h ]]; then
        echo "#include <$s.h>" >>src/${PROJ}_private.h
        echo >>src/${PROJ}_private.h
    fi
done

if echo $LIBS | grep sofia-sip-ua >/dev/null; then
    cat >>src/${PROJ}_private.h <<EOF
#include <sofia-sip/su.h>
#include <sofia-sip/url.h>
#include <sofia-sip/bnf.h>
#include <sofia-sip/sdp.h>
#include <sofia-sip/msg.h>
#include <sofia-sip/nua.h>
#include <sofia-sip/su_log.h>
#include <sofia-sip/sdp_tag.h>
#include <sofia-sip/su_wait.h>
#include <sofia-sip/string0.h>
#include <sofia-sip/su_alloc.h>
#include <sofia-sip/msg_addr.h>
#include <sofia-sip/sip_util.h>
#include <sofia-sip/msg_types.h>
#include <sofia-sip/su_tag_io.h>
#include <sofia-sip/su_strlst.h>
#include <sofia-sip/su_vector.h>
#include <sofia-sip/sip_extra.h>
#include <sofia-sip/tport_tag.h>
#include <sofia-sip/sip_protos.h>
#include <sofia-sip/hostdomain.h>
#include <sofia-sip/sip_status.h>
#include <sofia-sip/sip_header.h>
#include <sofia-sip/sip_status.h>
#include <sofia-sip/http_status.h>
#include <sofia-sip/stun_common.h>
#include <sofia-sip/su_addrinfo.h>
#include <sofia-sip/su_uniqueid.h>
#include <sofia-sip/su_localinfo.h>

EOF
fi

for NAME in $OBJS; do
    echo "#include \"$NAME.h\"" >>src/${PROJ}_private.h
done

cat >>src/${PROJ}_private.h <<EOF
/* For Emacs:
 * Local Variables:
 * indent-tabs-mode:nil
 * tab-width:4
 * c-basic-offset:4
 * c-file-style:nil
 * End:
 * For VIM:
 * vim:set expandtab softtabstop=4 shiftwidth=4 tabstop=4:
 */
EOF

######################################################################

echo "generating src/$PROJ.c..."
cat >src/$PROJ.c <<EOF
/*
 * $PROJ -- $DESCRIP
 * Copyright (c) $(date +%Y) $AUTHOR
 * Licensed $LICENSE
 */

#include "${PROJ}_private.h"

int main(int argc, char *argv[])
{
    int n = 1;
    log_devel("hello kitty no. %d", n++);
    log_devel("hello kitty no. %d", n++);
    log_debug("hello kitty no. %d", n++);
    log_info("hello kitty no. %d", n++);
    log("hello kitty no. %d", n++);
    log_notice("hello kitty no. %d", n++);
    log_warning("hello kitty no. %d", n++);
    log_error("hello kitty no. %d", n++);
    log_crash("hello kitty no. %d", n++);
    exit(0);
}

/* For Emacs:
 * Local Variables:
 * indent-tabs-mode:nil
 * tab-width:4
 * c-basic-offset:4
 * c-file-style:nil
 * End:
 * For VIM:
 * vim:set expandtab softtabstop=4 shiftwidth=4 tabstop=4:
 */
EOF

######################################################################

echo "generating src/test/test.c..."
cat >src/test/test.c <<EOF
/*
 * $PROJ -- $DESCRIP
 * Copyright (c) $(date +%Y) $AUTHOR
 * Licensed $LICENSE
 */

#include "${PROJ}_private.h"

int main(int argc, char *argv[])
{
    exit(0);
}

/* For Emacs:
 * Local Variables:
 * indent-tabs-mode:nil
 * tab-width:4
 * c-basic-offset:4
 * c-file-style:nil
 * End:
 * For VIM:
 * vim:set expandtab softtabstop=4 shiftwidth=4 tabstop=4:
 */
EOF

######################################################################

echo "generating src/log.h..."
cat >src/log.h <<EOF
/*
 * $PROJ -- $DESCRIP
 * Copyright (c) $(date +%Y) $AUTHOR
 * Licensed $LICENSE
 */

#ifndef ${PROJ_SYMBOL}_LOG_H
#define ${PROJ_SYMBOL}_LOG_H

#include <stdio.h>
#include <stdbool.h>

#define LOG_CRASH 0
#define LOG_ERROR 1
#define LOG_WARNING 2
#define LOG_NOTICE 3
#define LOG_INFO 4
#define LOG_DEBUG 5
#define LOG_DEVEL 6

#define BOLD "\x1b[1m"
#define UNBOLD "\x1b[22m"
#define FLIP "\x1b[7m"
#define PLAIN "\x1b[0m"

#define RED "\x1b[31m"
#define BLUE "\x1b[34m"
#define CYAN "\x1b[36m"
#define GREEN "\x1b[32m"
#define YELLOW "\x1b[33m"
#define MAGENTA "\x1b[35m"
#define HOTPINK "\x1b[38;5;200m"

#define FGOFF "\x1b[39m"
#define BGOFF "\x1b[49m"
#define BOLDOFF "\x1b[22m"
#define FLIPOFF "\x1b[27m"

/* useful for reducing binary size or security */
#ifdef NO_LINENOS
#  define FUNK NULL, NULL, 0
#else
#  define FUNK __func__, __FILE__, __LINE__
#endif

#define log(...)         loggy(LOG_INFO, FUNK, __VA_ARGS__)
#define log_devel(...)   loggy(LOG_DEVEL, FUNK, __VA_ARGS__)
#define log_debug(...)   loggy(LOG_DEBUG, FUNK, __VA_ARGS__)
#define log_info(...)    loggy(LOG_INFO, FUNK, __VA_ARGS__)
#define log_notice(...)  loggy(LOG_NOTICE, FUNK, __VA_ARGS__)
#define log_warning(...) loggy(LOG_WARNING, FUNK, __VA_ARGS__)
#define log_error(...)   loggy(LOG_ERROR, FUNK, __VA_ARGS__)
#define log_crash(...)   loggy(LOG_CRASH, FUNK, __VA_ARGS__)

/**
 * Configures logger based on environment variables
 *
 * - LOGFILE: Absolute filename like /var/log/$PROJ.log (default stderr)
 *   If this is set blank, logging is disabled.
 *
 * - LOGLEVEL: Maximum verbosity.  Can be crash, warning, notice, info,
 *   debug, or devel.  The default is warning.
 *
 * This function is called for your automatically so only call it again
 * if you changed the environment variables.
 */
void log_autoconf();

/**
 * Configure logger manually
 *
 * \code
 * setenv("TZ", "UTC");
 * static const char *my_log_formats[] = {
 *     "{DATE}T{TIME}.{MS}Z CRASH   {MSG}",
 *     "{DATE}T{TIME}.{MS}Z WARNING {MSG}",
 *     "{DATE}T{TIME}.{MS}Z NOTICE  {MSG}",
 *     "{DATE}T{TIME}.{MS}Z INFO    {MSG}",
 *     "{DATE}T{TIME}.{MS}Z DEBUG   {MSG}",
 *     "{DATE}T{TIME}.{US}Z DEVEL   {MSG} ({ELAP} {FUNC}@{FILENAME}:{LINE})",
 *     NULL,
 * };
 * log_conf(fopen("/var/log/$PROJ.log", "ab"), true, my_log_formats);
 * \endcode
 *
 * The following format variables are available:
 *
 * - DATE: ISO 8601 date formatted as "%Y-%m-%d"
 * - TIME: ISO 8601 time formatted as "%H:%M:%S"
 * - MS: Milliseconds
 * - US: Microseconds
 * - ELAP: Shows seconds since last log emission with μs precision
 * - FUNC Calling source function name
 * - FILE: Calling source file (relative to project root)
 * - FILENAME: Calling source filename (basename of FILE)
 * - LINE: Line in source file that invoked logger.
 *
 * @param level     Highest verbosity log level you want
 * @param outfp     Output standard i/o file or NULL to disable logger
 * @param autoclose Automatically fclose(outfp) for you on exit.
 * @param fmts      List of NULL terminated format strings.  If NULL then
 *                  the defaults will be used.  The colorized defaults will
 *                  be enabled if outfp is a terminal.
 */
void log_conf(int level, FILE *outfp, bool autoclose, const char **fmts);

/**
 * Backend logging function
 */
void loggy(int level, const char *func, const char *file, int line,
           const char *fmt, ...)
    __attribute__ ((format (printf, 5, 6)));

#endif /* ${PROJ_SYMBOL}_LOG_H */

/* For Emacs:
 * Local Variables:
 * indent-tabs-mode:nil
 * tab-width:4
 * c-basic-offset:4
 * c-file-style:nil
 * End:
 * For VIM:
 * vim:set expandtab softtabstop=4 shiftwidth=4 tabstop=4:
 */
EOF

######################################################################

echo "generating src/log.c..."
cat >src/log.c <<EOF
/*
 * $PROJ -- $DESCRIP
 * Copyright (c) $(date +%Y) $AUTHOR
 * Licensed $LICENSE
 */

#include "${PROJ}_private.h"

static const char *formats_plain[] = {
    "{DATE}T{TIME}.{US} [CRASH] {MSG} ({FUNC}@{FILENAME}:{LINE})\n",
    "{DATE}T{TIME}.{US} [ERROR] {MSG}\n",
    "{DATE}T{TIME}.{US} [WARNING] {MSG}\n",
    "{DATE}T{TIME}.{US} [NOTICE] {MSG}\n",
    "{DATE}T{TIME}.{US} [INFO] {MSG}\n",
    "{DATE}T{TIME}.{US} [DEBUG] {MSG} ({FUNC}@{FILENAME}:{LINE})\n",
    "{DATE}T{TIME}.{US} {ELAP} [DEVEL] {MSG} ({FUNC}@{FILENAME}:{LINE})\n",
    NULL,
};

static const char *formats_color[] = {
    BOLD RED FLIP "{DATE}T{TIME}.{US} [CRASH] {MSG} ({FUNC}@{FILENAME}:{LINE})" PLAIN "\n",
    RED "{DATE}T{TIME}.{US} [" BOLD "ERROR" UNBOLD "] {MSG}" PLAIN "\n",
    "{DATE}T{TIME}.{US} [" BOLD RED "WARNING" PLAIN "] {MSG}\n",
    "{DATE}T{TIME}.{US} [" BOLD YELLOW "NOTICE" PLAIN "] {MSG}\n",
    "{DATE}T{TIME}.{US} [" BOLD  "INFO" PLAIN "] {MSG}\n",
    GREEN "{DATE}T{TIME}.{US} [" BOLD "DEBUG" UNBOLD "] {MSG} ({FUNC}@{FILENAME}:{LINE})" PLAIN "\n",
    MAGENTA "{DATE}T{TIME}.{US} {ELAP} [" BOLD "DEVEL" UNBOLD "] {MSG} ({FUNC}@{FILENAME}:{LINE})" PLAIN "\n",
    NULL,
};

static int loglevel;
static int loglevel_max;
static FILE *logfile = NULL;
static const char **formats;
static bool initialized = false;
static bool logfile_autoclose = false;

static void cleanup()
{
    if (logfile && logfile_autoclose) {
        fclose(logfile);
        logfile = NULL;
    }
}

void log_conf(int level, FILE *out, bool autoclose, const char **fmts)
{
    if (!initialized) {
        initialized = true;
        atexit(cleanup);
    }
    cleanup();
    logfile = out;
    loglevel = level;
    logfile_autoclose = autoclose;
    if (!fmts) {
        formats = isatty(fileno(logfile)) ? formats_color : formats_plain;
    } else {
        formats = fmts;
        assert(formats[0]);
    }
    for (loglevel_max = 0; formats[loglevel_max + 1]; loglevel_max++);
}

void log_autoconf()
{
    FILE *out = NULL;
    const char *ts;
    int level;
    bool autoclose;

    ts = getenv("LOGFILE");
    if (ts) {
        if (*ts) {
            out = fopen(ts, "ab");
            autoclose = true;
        } else {
            out = NULL;
            autoclose = false;
        }
    } else {
        out = stderr;
        autoclose = false;
    }

    ts = getenv("LOGLEVEL");
    if (ts) {
        if (strcasecmp(ts, "devel") == 0) {
            level = LOG_DEVEL;
        } else if (strcasecmp(ts, "debug") == 0) {
            level = LOG_DEBUG;
        } else if (strcasecmp(ts, "info") == 0) {
            level = LOG_INFO;
        } else if (strcasecmp(ts, "notice") == 0) {
            level = LOG_NOTICE;
        } else if (strcasecmp(ts, "warning") == 0) {
            level = LOG_WARNING;
        } else if (strcasecmp(ts, "crash") == 0) {
            level = LOG_CRASH;
        } else {
            level = atoi(ts);
        }
    } else {
        level = LOG_WARNING;
    }

    log_conf(level, out, autoclose, NULL);
}

static int replace(bstring bs, const char *fs, const char *rs, int rl)
{
    struct tagbstring bf;
    struct tagbstring br;
    btfromcstr(bf, fs);
    blk2tbstr(br, rs, (rl >= 0) ? rl : strlen(rs));
    return bfindreplace(bs, &bf, &br, 0);
}

void loggy(int level, const char *func, const char *file, int line,
           const char *fmt, ...)
{
    if (!initialized)
        log_autoconf();
    if (level > loglevel || !logfile)
        return;
    if (!(0 <= level && level <= loglevel_max))
        return;

    /* get string representation of date/time */
	struct tm tm[1];
	struct timeval tv[1];
    char datebuf[32], timebuf[32], msbuf[16], usbuf[16];
	gettimeofday(tv, NULL);
	localtime_r(&tv->tv_sec, tm);
	strftime(datebuf, sizeof(datebuf), "%Y-%m-%d", tm);
	strftime(timebuf, sizeof(timebuf), "%H:%M:%S", tm);
	snprintf(msbuf, sizeof(msbuf), "%03ld", tv->tv_usec / 1000);
	snprintf(usbuf, sizeof(usbuf), "%06ld", tv->tv_usec);

    /* calculate how much time elapsed from last log emit */
    char elapbuf[16] = { 0 };
#if HAVE_LIBRT
	struct timespec ts[1];
	if (clock_gettime(CLOCK_MONOTONIC_RAW, ts) == 0) {
        int64_t stamp = ts->tv_sec * 1e9 + ts->tv_nsec;
        static int64_t stamp_last = -1;
        if (stamp_last == -1)
            stamp_last = stamp;
        float elap = (float)(stamp - stamp_last) / 1e9;
        stamp_last = stamp;
        snprintf(elapbuf, sizeof(elapbuf), "%.6f", elap);
    }
#endif

    /* format the printf style message */
    char *msg;
    int lmsg;
    va_list ap;
    va_start(ap, fmt);
    lmsg = vsnprintf(NULL, 0, fmt, ap);
    va_end(ap);
    assert(lmsg >= 0);
    msg = malloc(lmsg + 1);
    va_start(ap, fmt);
    vsnprintf(msg, lmsg + 1, fmt, ap);
    va_end(ap);

    char linebuf[16] = { 0 };
    const char *filename = "";
    const char *filefull = "";
    if (file) {
        snprintf(linebuf, sizeof(linebuf), "%d", line);
        filefull = file;
        filename = strrchr(filefull, '/');
        filename = filename ? filename + 1 : filefull;
    }

    /* emit the log entry */
    bstring data = bfromcstralloc(lmsg + 1024, formats[level]);
    replace(data, "{DATE}", datebuf, -1);
    replace(data, "{TIME}", timebuf, -1);
    replace(data, "{MS}", msbuf, -1);
    replace(data, "{US}", usbuf, -1);
    replace(data, "{ELAP}", elapbuf, -1);
    replace(data, "{FUNC}", func, -1);
    replace(data, "{MSG}", msg, lmsg);
    replace(data, "{FILE}", filefull, -1);
    replace(data, "{FILENAME}", filename, -1);
    replace(data, "{LINE}", linebuf, -1);
    fwrite(data->data, 1, data->slen, logfile);
    fflush(logfile);

    bdestroy(data);
    free(msg);
}

/* For Emacs:
 * Local Variables:
 * indent-tabs-mode:nil
 * tab-width:4
 * c-basic-offset:4
 * c-file-style:nil
 * End:
 * For VIM:
 * vim:set expandtab softtabstop=4 shiftwidth=4 tabstop=4:
 */
EOF

######################################################################

cd src
for NAME in $OBJS; do
    export NAME PROJ DESCRIP AUTHOR EMAIL LICENSE
    c-object-bone
done
cd ..

######################################################################

echo "generating .gdbinit..."
cat >.gdbinit <<EOF
# -*-GDB-Script-*-
#
# Justine's .gdbinit
# Makes GDB fabulous
#
# This wouldn't be possible without all the code I stole from the
# wonderful .gdbinit maintained by the friendly hackers at
# reverse-engineering.net
#
# Some of the extra commands provided here (like 'reg') will only work
# on x86-64 machines.
#

set history save on
set history expansion on
set prompt \033[0;38;5;200m(>'.')> \033[0m
set confirm off
set verbose off
set print union on
set print array on
set print null-stop on
set print pretty on
set print sevenbit-strings on
set height 0
set width 0

# for those of us who aren't old men with beards
set disassembly-flavor intel


define flags
  # OF (overflow) flag
  if ((\$eflags >> 0xB) & 1)
    printf "O "
    set \$_of_flag = 1
  else
    printf "o "
    set \$_of_flag = 0
  end
  if ((\$eflags >> 0xA) & 1)
    printf "D "
  else
    printf "d "
  end
  if ((\$eflags >> 9) & 1)
    printf "I "
  else
    printf "i "
  end
  if ((\$eflags >> 8) & 1)
    printf "T "
  else
    printf "t "
  end
  # SF (sign) flag
  if ((\$eflags >> 7) & 1)
    printf "S "
    set \$_sf_flag = 1
  else
    printf "s "
    set \$_sf_flag = 0
  end
  # ZF (zero) flag
  if ((\$eflags >> 6) & 1)
    printf "Z "
    set \$_zf_flag = 1
  else
    printf "z "
    set \$_zf_flag = 0
  end
  if ((\$eflags >> 4) & 1)
    printf "A "
  else
    printf "a "
  end
  # PF (parity) flag
  if ((\$eflags >> 2) & 1)
    printf "P "
    set \$_pf_flag = 1
  else
    printf "p "
    set \$_pf_flag = 0
  end
  # CF (carry) flag
  if (\$eflags & 1)
    printf "C "
    set \$_cf_flag = 1
  else
    printf "c "
    set \$_cf_flag = 0
  end
  printf "\n"
end
document flags
Print flags register.
end


define eflags
  printf "     OF <%d>  DF <%d>  IF <%d>  TF <%d>",\
  ((\$eflags >> 0xB) & 1), ((\$eflags >> 0xA) & 1), \
  ((\$eflags >> 9) & 1), ((\$eflags >> 8) & 1)
  printf "  SF <%d>  ZF <%d>  AF <%d>  PF <%d>  CF <%d>\n",\
  ((\$eflags >> 7) & 1), ((\$eflags >> 6) & 1),\
  ((\$eflags >> 4) & 1), ((\$eflags >> 2) & 1), (\$eflags & 1)
  printf "     ID <%d>  VIP <%d> VIF <%d> AC <%d>",\
  ((\$eflags >> 0x15) & 1), ((\$eflags >> 0x14) & 1), \
  ((\$eflags >> 0x13) & 1), ((\$eflags >> 0x12) & 1)
  printf "  VM <%d>  RF <%d>  NT <%d>  IOPL <%d>\n",\
  ((\$eflags >> 0x11) & 1), ((\$eflags >> 0x10) & 1),\
  ((\$eflags >> 0xE) & 1), ((\$eflags >> 0xC) & 3)
end
document eflags
Print eflags register.
end


define reg
  echo \033[32m
  printf "RAX:"
  echo \033[0m
  printf "%016X  ", \$rax
  echo \033[32m
  printf "RBX:"
  echo \033[0m
  printf "%016X  ", \$rbx
  echo \033[32m
  printf "RCX:"
  echo \033[0m
  printf "%016X  ", \$rcx
  echo \033[32m
  printf "RDX:"
  echo \033[0m
  printf "%016X\n", \$rdx

  echo \033[32m
  printf " R8:"
  echo \033[0m
  printf "%016X  ", \$r8
  echo \033[32m
  printf " R9:"
  echo \033[0m
  printf "%016X  ", \$r9
  echo \033[32m
  printf "R10:"
  echo \033[0m
  printf "%016X  ", \$r10
  echo \033[32m
  printf "R11:"
  echo \033[0m
  printf "%016X\n", \$r11
  echo \033[32m

  printf "R12:"
  echo \033[0m
  printf "%016X  ", \$r12
  echo \033[32m
  printf "R13:"
  echo \033[0m
  printf "%016X  ", \$r13
  echo \033[32m
  printf "R14:"
  echo \033[0m
  printf "%016X  ", \$r14
  echo \033[32m
  printf "R15:"
  echo \033[0m
  printf "%016X\n", \$r15

  echo \033[32m
  printf "RSI:"
  echo \033[0m
  printf "%016X  ", \$rsi
  echo \033[32m
  printf "RDI:"
  echo \033[0m
  printf "%016X  ", \$rdi
  echo \033[32m
  printf "RBP:"
  echo \033[0m
  printf "%016X  ", \$rbp
  echo \033[32m
  printf "RSP:"
  echo \033[0m
  printf "%016X\n", \$rsp

  echo \033[32m
  printf "RIP:"
  echo \033[0m
  printf "%016X", \$rip

  printf "  "
  echo \033[1;31m
  flags
  echo \033[0m

  # # call smallregisters
  # smallregisters

  # # display conditional jump routine
  # dumpjump
  # printf "\n"
end
document reg
Print CPU registers.  Currently x86-64 only.
end


define init
  tbreak _init
  r
end
document init
Run program and break on _init().
end


define start
  tbreak _start
  r
end
document start
Run program and break on _start().
end


define sstart
  tbreak __libc_start_main
  r
end
document sstart
Run program and break on __libc_start_main().
Useful for stripped executables.
end


define main
  tbreak main
  r
end
document main
Run program and break on main().
end
EOF

