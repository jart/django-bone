	make -C doc html

pro:
	find . -name \\*.pyc | xargs rm -f
	pip install -e .
	$PROJ migrate

static:
	lessc $PROJ/static/$PROJ/css/$PROJ.less \\
		$PROJ/static/$PROJ/css/$PROJ.css
